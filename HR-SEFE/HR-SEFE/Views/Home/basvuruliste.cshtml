@model IEnumerable<HR_SEFE.Models.basvuru>

@{
    ViewBag.Title = "basvuruliste";

}

<h2>BAŞVURU LİSTE</h2>



<div class="row">
    <div class="col-lg-12">
        <table id="myTable" class="display" border=”1″ font-size=9>
            <thead>
                <tr>
                    <th>Sıra No</th>
                    <th>Ad Soyad</th>
                    <th>Doğum Tarihi</th>
                    <th>Uyruk</th>
                    <th>TC No</th>
                    <th>Cinsiyet</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>

                    <th>Okul</th>
                    <th>Bolüm</th>
                    <th>Not Ortalama</th>
                    <th>Staj zorunlu mu?</th>
                    <th>Staj Türü</th>
                    <th>Staj Süresi</th>
                    <th>SSK Okul Karşılama</th>

                    <th>Referans var mı?</th>
                    <th>Referans Ad Soyad</th>
                    <th>Referans Bolüm</th>
                    <th>Referans Mail</th>
                    <th>Referans Telefon</th>
                    <th>Başvuru Seçilmiş mi?</th>
                    <th>Ekle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

                {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.adsoyad</td>
                    <td>@item.dogumtarihi</td>
                    <td>@item.uyruk</td>
                    <td>@item.tc</td>
                    <td>@item.cinsiyet</td>
                    <td>@item.mail</td>
                    <td>@item.tel</td>
                    <td>@item.adres</td>

                    <td>@item.okul</td>
                    <td>@item.bolum</td>
                    <td>@item.notort</td>
                    <td>@item.stajzorun</td>
                    <td>@item.stajtur</td>
                    <td>@item.stajsure</td>
                    <td>@item.sgtrdurum</td>
                    <td>@item.refvar</td>
                    <td>@item.refadsoyad</td>
                    <td>@item.refbolum</td>
                    <td>@item.refmail</td>
                    <td>@item.reftel</td>
                    <td>@item.secilen</td>

                    <td>
                        <a href="/Home/ekle/@item.ID" class="submit-contact default-submit"><input type="submit" value="EKLE" onclick="return confirm('Kayıt ekleniyor! Eklemek istediğinize emin misiniz?');" /></a>
                    </td>



                </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<br />

<a href="/Home/cikis">
    <div class="submit-contact default-submit">
        <input type="submit" value="ÇIKIŞ YAP" onclick="return confirm('Çıkış yapmak İstiyor musunuz?');" />

    </div>
</a>


